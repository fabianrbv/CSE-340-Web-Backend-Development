<main class="account-management-container">
  <h1>Account Management</h1>
  <%- messages() %>
  <% if (errors) { %>
    <ul class="notice">
      <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <% if (locals.accountData && locals.accountData.account_type === 'Client') { %>
    <h2>Welcome <%= locals.accountData.account_firstname %></h2>
  <% } %>

  <% if (locals.accountData && (locals.accountData.account_type === 'Employee' || locals.accountData.account_type === 'Admin')) { %>
    <h2>Welcome <%= locals.accountData.account_firstname %></h2>
    <h3>Inventory Management</h3>
    <p><a href="/inv/">Manage Inventory</a></p>
  <% } %>

  <% if (locals.accountData) { %>
    <p><a href="/account/update/<%= locals.accountData.account_id %>">Update Account Information</a></p>
  <% } %>

</main>