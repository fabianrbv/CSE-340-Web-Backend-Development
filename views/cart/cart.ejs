<main class="cart-container">
  <h1><%= title %></h1>
  <%- messages() %>

  <% if (!cart || !cart.items || cart.items.length === 0) { %>
    <p>Your cart is empty.</p>
  <% } else { %>
    <table>
      <thead>
        <tr><th>Auto</th><th>Quantity</th><th>Price</th><th>Subtotal</th><th>Actions</th></tr>
      </thead>
      <tbody>
        <% cart.items.forEach(item => { %>
          <tr>
            <td><%= item.inv_make %> <%= item.inv_model %></td>
            <td>
              <form action="/cart/update" method="post">
                <input type="hidden" name="car_id" value="<%= item.inv_id %>">
                <input type="number" name="quantity" min="1" value="<%= item.quantity %>">
                <button type="submit">Update</button>
              </form>
            </td>
            <td>$<%= item.inv_price %></td>
            <td>$<%= item.inv_price * item.quantity %></td>
            <td>
              <form action="/cart/remove" method="post">
                <input type="hidden" name="car_id" value="<%= item.inv_id %>">
                <button type="submit">Remove</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
    <p>Total: $<%= cart.items.reduce((sum,i) => sum + (i.inv_price * i.quantity), 0) %></p>
  <% } %>

</main>
