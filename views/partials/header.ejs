<header id="top-header">
  <span class="siteName">
    <a href="/" title="Return to home page">CSE Motors</a>
  </span>
  <div id="tools">
    <% if (locals.loggedin && locals.accountData) { %>
      <a title="Account Management" href="/account/">Welcome <%= locals.accountData.account_firstname %> | </a>
      <% if (locals.accountData.account_type === 'Client') { %>
        <a title="Cart" href="/cart/">Cart (<span id="cart-count"><%= typeof cartCount !== 'undefined' ? cartCount : 0 %></span>) | </a>
      <% } %>
      <a title="Log out" href="/account/logout">Logout</a>
    <% } else { %>
      <a title="Click to log in" href="/account/login">My Account</a>
    <% } %>
  </div>
</header>
<script src="/js/cart.js"></script>